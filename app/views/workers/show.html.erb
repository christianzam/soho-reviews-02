<%= render 'shared/navbar'%>
<div class="spacer"></div>
<p id="notice"><%= notice %></p>

<div class="container">
    <div class="main-body">
      <h1><%= @worker.name %> Details</h1>
          <!-- /Breadcrumb -->
          <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="card-body">
                  <div class="d-flex flex-column align-items-center text-center">
                    <%#= image_tag "avatar_woman.png", class:"rounded-circle", size:"250x300" %>
                    <%= cl_image_tag @worker.photo.key, size:"250x300" %>
                    <div class="mt-3">
                      <p class="text-dark">Presta pa la orquesta</p>
                    </div>
                  </div>
                </div>
              </div>
              
            </div>
            <div class="col-md-8">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="text-white bg-dark mb-0">Name</h6>
                    </div>
                    <div class="col-sm-9 text-dark">
                      <%= @worker.name %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="text-white bg-dark mb-0">Address</h6>
                    </div>
                    <div class="col-sm-9 text-dark">
                      <%= @worker.address %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="text-white bg-dark mb-0">Review</h6>
                    </div>
                    <div class="col-sm-9 text-dark">
                      <%= @worker.description %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="text-white bg-dark mb-0">Price</h6>
                    </div>
                    <div class="col-sm-9 text-dark">
                      Â£ <%= @worker.price %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="text-white bg-dark mb-0">Rating</h6>
                    </div>
                    <div class="col-sm-9 text-dark">
                      <%= @worker.rating %> <i class="fa fa-star"></i>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="text-white bg-dark mb-0">Visited</h6>
                    </div>
                    <div class="col-sm-9 text-dark">
                      Seen by user: <%= @worker.user_id%>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-12">
                       <% if policy(@worker).edit? %>
                         <button class="btn btn-dark"><i class="fas fa-edit mr-2"><%= link_to ' Edit', edit_worker_path(@worker), style:"color:white;" %></i></button>
                       <% end %>
                    </div>
                  </div>
                </div>
              </div>

            </div>
          </div>

        </div>
    </div>
<div class="container">
  <div class="row">
    <div class="col-9">
      <div class="d-flex justify-content-end">
        <p><%= link_to '< Go Back', workers_path, style:"color:white;" %></p>
      </div>
    </div>
  </div>
</div>
