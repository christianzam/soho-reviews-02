<p id="notice"><%= notice %></p>

<h1>Workers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Description</th>
      <th>Price</th>
      <th>Rating</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workers.each do |worker| %>
      <tr>
        <td><%= worker.name %></td>
        <td><%= worker.address %></td>
        <td><%= worker.description %></td>
        <td><%= worker.price %></td>
        <td><%= worker.rating %></td>
        <td><%= worker.user_id %></td>
        <td><%= link_to 'Show', worker %></td>
        <%# if current_user == restaurant.user %>
        <% if policy(worker).edit? %>
          <td><%= link_to 'Edit', edit_worker_path(worker) %></td>
        <% end %>
        <% if policy(worker).destroy? %>
          <td><%= link_to 'Destroy', worker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<% if policy(Worker).new? %>
  <%= link_to 'New Worker', new_worker_path %>
<% end %>

