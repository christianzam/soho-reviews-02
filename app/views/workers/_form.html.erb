<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <%= simple_form_for(@worker) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :address %>
        <div class="d-flex justify-content-around">
          <span class="mr-2"><%= f.input :price, :input_html => { maxlength: 2, style: 'width: 100px'} %></span>
          <span class="ml-2"><%= f.input :rating, :input_html => { maxlength: 2, style: 'width: 100px'} %></span>
        </div>
        <%= f.input :description, :input_html => { 'rows' => 8, 'cols' => 10 }%>
        <%= f.input :photo, as: :file, label: "Add photo" %>
        <%#= f.label :photo, "Add Photo", class:"btn btn-dark", style:"color:white;" %>
        <%#= f.input :photo, as: :file, label: false, input_html: { style: "display: none" }%>
      </div>

      <div class="d-flex justify-content-center pt-5">
        <%= f.button :submit, class:"btn btn-dark", style:"color:white;" %>
      </div>
    <% end %>
    </div>
  </div>
</div>
