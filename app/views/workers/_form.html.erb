<div class="container">
  <div class="row">
    <div class="col-6">
      <%= simple_form_for(@worker) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :description %>
        <%= f.input :price %>
        <%= f.input :rating %>
        <%#= f.association :user %>
      </div>

      <div class="form-actions">
        <%= f.button :submit %>
      </div>
    <% end %>
    </div>
  </div>
</div>
