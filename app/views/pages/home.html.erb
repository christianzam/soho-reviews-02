<section class="masthead" role="img" aria-label="Image Description" >
  <% if user_signed_in? %>
    <h1>Hello <%= current_user.username.capitalize %></h1>
  <% else %>
    <h1>
      <%= link_to "Login", new_user_session_path, class: "banner-text" %>
    </h1>
    <hr>
    <h1>
      <%= link_to "Sign Up", new_user_registration_path, class: "banner-text" %>
    </h1>
  <% end %>
</section>
